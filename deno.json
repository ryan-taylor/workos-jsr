{
  "imports": {
    "iron-session": "npm:iron-session@8.0.4",
    "jose": "npm:jose@6.0.11",
    "leb": "npm:leb@1.0.0",
    "pluralize": "npm:pluralize@8.0.0",
    
    "crypto": "https://deno.land/std/crypto/mod.ts",
    "node:crypto": "https://deno.land/std/crypto/mod.ts",
    "node:http": "https://deno.land/std/node/http.ts",
    "node:https": "https://deno.land/std/node/https.ts",
    "fs/promises": "https://deno.land/std/fs/mod.ts",
    
    "chai": "npm:chai@5.2.0",
    "nock": "npm:nock@14.0.4",
    "supertest": "npm:supertest@7.1.0",
    
    "@std/assert": "jsr:@std/assert@1",
    "@std/flags": "jsr:@std/flags@1",
    "@std/path": "jsr:@std/path@1",
    "@std/fs": "jsr:@std/fs@1",
    "@std/http": "jsr:@std/http@1",
    
    "$fresh/": "https://deno.land/x/fresh@1.6.5/",
    "preact": "https://esm.sh/preact@10.19.6",
    "preact/hooks": "https://esm.sh/preact@10.19.6/hooks",
    "preact/jsx-runtime": "https://esm.sh/preact@10.19.6/jsx-runtime",
    "preact/jsx-dev-runtime": "https://esm.sh/preact@10.19.6/jsx-dev-runtime",
    "preact/compat": "https://esm.sh/preact@10.19.6/compat",
    "react": "https://esm.sh/react@18.2.0",
    "react-dom": "https://esm.sh/react-dom@18.2.0"
  },
  "tasks": {
    "test": "deno test --allow-all",
    "test:watch": "deno test --allow-all --watch",
    "test:coverage": "deno test --allow-all --coverage=cov",
    "coverage:report": "deno coverage cov --lcov --output=cov/lcov.info",
    "coverage:html": "deno coverage cov --html --output=cov/html",
    "bundle": "deno run -A https://deno.land/x/fresh@1.6.5/dev.ts build"
  },
  "test": {
    "include": [
      "src/**/*.{test,spec}.{ts,js}",
      "tests/**/*.test.{ts,js}",
      "main_test.ts"
    ],
    "exclude": [
      "**/node_modules/**"
    ]
  },
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["dom", "deno.ns", "deno.window"],
    "types": ["vitest"]
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "tests/", "scripts/", "*.ts"]
  },
  "lint": {
    "include": ["src/", "tests/", "scripts/", "*.ts"],
    "exclude": ["**/node_modules/**", "lib/**", "cov/**", "coverage/**"]
  }
}
